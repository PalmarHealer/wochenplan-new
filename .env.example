APP_NAME=Wochenplan
APP_ENV=local
APP_KEY=
APP_DEBUG=false
APP_URL=

# IMPORTANT: Change these before first use! Never use defaults in production.
# Generate a secure password: openssl rand -base64 32
ADMIN_EMAIL=admin@admin.com
ADMIN_PASSWORD=admin

# Application settings
APP_LOGO=/images/icons/icon-512x512.png
APP_LOGO_DARK=/images/icons/icon-512x512-dark.png
DAY_VIEW_DISPLAY_ALL_ABSENCE_NOTES=true

# User registration (disable in production unless needed)
ALLOW_REGISTRATION=false

# External API credentials (obtain from provider)
LUNCH_API_URL=
LUNCH_API_KEY=

# Localization
APP_LOCALE=de
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=de_DE

APP_MAINTENANCE_DRIVER=file

# Azure AD OAuth (configure if using Azure SSO)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_REDIRECT_URI=
AZURE_TENANT_ID=
PROXY=

# Trusted proxies (configure for your network/Docker setup)
TRUSTED_PROXIES=

# HTTPS enforcement (enable in production)
FORCE_HTTPS=false

PHP_CLI_SERVER_WORKERS=4

# Password hashing (12 is secure, increase for higher security)
BCRYPT_ROUNDS=12

# Logging (use 'warning' or 'error' in production)
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database configuration
DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# Session configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail configuration
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# PDF generation (only set to true in Docker/containerized environments)
LARAVEL_PDF_NO_SANDBOX=false
# LARAVEL_PDF_CHROME_PATH=

VITE_APP_NAME="${APP_NAME}"
